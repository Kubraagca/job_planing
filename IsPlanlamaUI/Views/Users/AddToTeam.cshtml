@model IsPlanlamaAPI.Contract.Common.Request.UserDtos.ResultUserDto

@{
    ViewData["Title"] = "Takıma Ekle";
}

<div class="container py-4">
    <h2 class="mb-4">@Model.UserName @Model.Surname kullanıcısını takıma ekle</h2>

    <form asp-action="AddToTeam" method="post">
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Takım Seç</label>
            <select name="teamId" class="form-control" asp-items="ViewBag.Teams"></select>
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
