@model List<IsPlanlamaAPI.Contract.Common.Request.UserDtos.ResultUserDto>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<div class="container py-4">
    <h2 class="mb-4">Kullanıcı Listesi</h2>

    <a asp-action="Create" class="btn btn-success mb-3">Yeni Kullanıcı Ekle</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Rol</th>
                <th>Takım</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Surname</td>
                        <td>@user.Role</td>
                        <td>@user.TeamId</td>
                        <td>
                            <a asp-controller="Users" asp-action="AddToTeam" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Takıma Ekle</a>
                           
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info btn-sm">Düzenle</a>
                            <form asp-action="Delete" asp-route-id="@user.Id" method="post" style="display:inline-block;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">
                                    Sil
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">Kayıtlı kullanıcı bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
